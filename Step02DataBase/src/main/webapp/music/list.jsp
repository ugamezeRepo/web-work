            color: #fff;
            padding: 10px;
            text-align: center;
        }

        .playlist-container {
            max-width: 800px;
            margin: 20px auto;
        }

        .song {
            display: flex;
            justify-content: space-between;
            align-items: center;
            background-color: #fff;
            border: 1px solid #ddd;
            padding: 10px;
            margin-bottom: 10px;
            border-radius: 5px;
        }

        .song img {
            max-width: 100px;
            margin-right: 10px;
        }

        .song-details {
            flex-grow: 1;
